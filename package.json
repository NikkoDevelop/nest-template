{
  "name": "nest-template",
  "version": "0.0.0",
  "description": "X5 Digital Platform Nest.js template",
  "type": "commonjs",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "scripts": {
    "build": "nest build",
    "lint": "pnpm exec eslint",
    "migrate": "migrate-mongo",
    "migrations:up": "npm run build && npm run migrate up",
    "migrations:down": "npm run build npm run migrate down",
    "migrations:status": "npm run build npm run migrate status",
    "prebuild": "rimraf dist",
    "prepare": "husky",
    "start": "nest start",
    "start:debug": "nest start --watch --debug",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test": "pnpm exec jest --passWithNoTests",
    "test:cov": "pnpm exec jest --coverage=true",
    "test:watch": "pnpm exec jest --watch"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier -w"
    ]
  },
  "author": "X5 Food Tech",
  "license": "UNLICENSED",
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/testing": "^10.3.4",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint-config-am-eslint-ts": "^2.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-jest": "^27.9.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "@fastify/static": "^7.0.1",
    "@nestjs/common": "^10.3.3",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.3",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/event-emitter": "^2.0.4",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/platform-fastify": "^10.3.3",
    "@nestjs/schedule": "^4.0.1",
    "@nestjs/swagger": "^7.3.0",
    "migrate-mongo": "^11.0.0",
    "mongoose": "^8.2.2",
    "nest-typed-config": "^2.9.2",
    "nestjs-request-context": "^3.0.0",
    "reflect-metadata": "^0.2.1",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "ulid": "^2.3.0"
  }
}
